generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// 1. Tabel User (Pakai ID ala Vercel/CUID)
model User {
  id           String   @id @default(cuid()) // ID Unik otomatis: user_clj...
  username     String   @unique
  passwordHash String
  fullName     String?
  role         Role     @default(KEPALA_CABANG)
  kodeCabang   String   // 'ALL' untuk pusat, atau misal 'CBG01'
  isActive     Boolean  @default(true)
  
  // Timestamps otomatis yang tadi kita bahas
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users") // Biar di database namanya tetap 'users' (lowercase)
}
// 2. Definisi Role (Enum biar gak typo saat koding)
enum Role {
  SUPER_ADMIN
  MANAGER
  KEPALA_CABANG
}